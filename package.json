{
    "name": "DevAlert",
    "displayName": "DevAlert",
    "description": "Get an alert/warning when you open or edit a file that contains a special comment with a custom message",
    "version": "1.0.4",
    "publisher": "EugeneBB",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "homepage": "https://github.com/Eugene-BB/DevAlert/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/Eugene-BB/DevAlert.git"
     }
}
